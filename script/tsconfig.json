{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../dist",
    "../src/render/*"
  ],
}
